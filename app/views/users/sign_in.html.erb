<h1>Welcome to Gorankr</h1>

<hr/>
<%= form_tag('/sign_in', method: "POST") do %>
<table align="center">
    <tr>
        <td>ID: </td>
        <td><%= text_field_tag :user_name %></td>
    </tr>
    <tr>
        <td>Password: </td>
        <td><%= password_field_tag :password %></td>
    </tr>
    <tr >
        <td colspan="2" align="center"><%= submit_tag 'Sign In', class: "btn btn-primary" %></td>
    </tr>
</table>
    
<% end %>

